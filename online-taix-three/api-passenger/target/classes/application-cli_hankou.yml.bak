server:
  port: 8081

eureka:
  client:
    service-url:
      hankou: http://localhost:7911/eureka/,http://localhost:7912/eureka/
      wuchang: http://localhost:7921/eureka/,http://localhost:7922/eureka/
    region: wuhan
    availability-zones:
      wuhan: hankou
    prefer-same-zone-eureka: true
      #,http://localhost:7901/eureka/,http://localhost:7902/eureka/

  instance:
    #服务刷新时间配置，每隔这个时间会主动心跳一次
    lease-renewal-interval-in-seconds: 1
    #服务过期时间配置,超过这个时间没有接收到心跳EurekaServer就会将这个实例剔除
    lease-expiration-duration-in-seconds: 1
#    hostname: localhost
    #true表示，将自己的ip注册到Eureka Server上，不配置或false表示将所在操作系统hostname注册到eureka server上。
#    prefer-ip-address: true
#    ip-address: 127.0.0.1
    metadata-map:
      zone: hankou
    # ${spring.application.name}:${spring.cloud.client.ip-address}:${server:port}
    # api-passenger:11.11.111.1:port
   # instance-id: ${spring.application.name}:${server.port}

spring:
  application:
    name: api-passenger

zone:
  name: cwuhan_hankou

